{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build for Windows",
            "type": "shell",
            "command": "./make_bin/bin/make.exe",
            "args": [
                "windows"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds for Windows using the bundled make and MinGW.",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "windows": {
                "command": ".\\make_bin\\bin\\make.exe"
            }
        },
        {
            "label": "Build for Linux",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds for Linux using the system's make and gcc.",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}